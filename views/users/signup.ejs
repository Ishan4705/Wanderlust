<% layout("/layouts/boilerplate.ejs")%>
<div class="row mt-3">
    <h3 class="col-6 offset-3">Signup on Wanderlust</h3>
    <div class="col-6 offset-3">
        <br>
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label"><b>Username:</b> </label>
                <input name="username" class="form-control" id="username" type="text" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label"><b>Email:</b></label>
                <input name="email" class="form-control" type="email" id="email" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label"><b>Password:</b></label>
                <input name="password" class="form-control" type="password" id="password" required>
            </div>
            <button class="btn btn-success">Signup</button>
        </form>
    </div>
</div>    